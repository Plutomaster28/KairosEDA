<Window x:Class="KairosEDA.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kairos EDA - Electronic Design Automation Suite" 
        Height="900" Width="1400"
        MinHeight="700" MinWidth="1200"
        WindowStartupLocation="CenterScreen"
        Background="#C0C0C0"
        FontFamily="MS Sans Serif"
        FontSize="11"
        WindowStyle="None"
        AllowsTransparency="False"
        ResizeMode="CanResizeWithGrip"
        BorderThickness="3">
    
    <Window.Style>
        <Style TargetType="Window">
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#0054E3" Offset="0"/>
                        <GradientStop Color="#0054E3" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Style>

    <Window.Resources>
        <!-- CDI-style raised button with 3D bevel effect -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#DFDFDF" Offset="0"/>
                        <GradientStop Color="#C0C0C0" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <SolidColorBrush Color="#808080"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderThickness="1"
                                Padding="{TemplateBinding Padding}">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="BorderBrush">
                                        <Setter.Value>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                <GradientStop Color="White" Offset="0"/>
                                                <GradientStop Color="#808080" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsPressed, RelativeSource={RelativeSource TemplatedParent}}" Value="True">
                                            <Setter Property="BorderBrush">
                                                <Setter.Value>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                        <GradientStop Color="#808080" Offset="0"/>
                                                        <GradientStop Color="White" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </Setter.Value>
                                            </Setter>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#B0B0B0" Offset="0"/>
                                            <GradientStop Color="#A0A0A0" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- CDI-style GroupBox with beveled border -->
        <Style TargetType="GroupBox">
            <Setter Property="BorderBrush" Value="#808080"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Background" Value="#C0C0C0"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0" Background="#C0C0C0" Padding="4,2" Margin="8,0,0,0">
                                <ContentPresenter ContentSource="Header" TextElement.FontWeight="Bold"/>
                            </Border>
                            <Border Grid.Row="0" Grid.RowSpan="2" 
                                    BorderThickness="2"
                                    Padding="{TemplateBinding Padding}"
                                    Background="{TemplateBinding Background}">
                                <Border.BorderBrush>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#FFFFFF" Offset="0"/>
                                        <GradientStop Color="#808080" Offset="0.5"/>
                                        <GradientStop Color="#404040" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.BorderBrush>
                                <ContentPresenter Grid.Row="1" Margin="0,8,0,0"/>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Sunken panel style for text boxes -->
        <Style x:Key="SunkenPanel" TargetType="Border">
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#808080" Offset="0"/>
                        <GradientStop Color="White" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="White"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Custom Title Bar -->
            <RowDefinition Height="Auto"/> <!-- Menu -->
            <RowDefinition Height="Auto"/> <!-- Toolbar -->
            <RowDefinition Height="*"/>    <!-- Main Content -->
            <RowDefinition Height="Auto"/> <!-- Status Bar -->
        </Grid.RowDefinitions>
        
        <!-- Custom Windows 95-style Title Bar -->
        <Border Grid.Row="0" Height="28" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#000080" Offset="0"/>
                    <GradientStop Color="#1084D0" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Window Icon -->
                <Image Grid.Column="0" Width="16" Height="16" Margin="6,0,4,0" 
                       Source="app_resources/icon/seadrive_icon.ico" 
                       RenderOptions.BitmapScalingMode="NearestNeighbor"/>
                
                <!-- Window Title -->
                <TextBlock Grid.Column="1" Text="Kairos EDA - Electronic Design Automation Suite" 
                          Foreground="White" FontWeight="Bold" FontFamily="MS Sans Serif" FontSize="11"
                          VerticalAlignment="Center" Margin="4,0"/>
                
                <!-- Window Control Buttons -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="0,3,3,3">
                    <!-- Minimize Button -->
                    <Button Width="16" Height="14" Margin="2,0" Click="MinimizeButton_Click"
                            Background="#C0C0C0" BorderThickness="1">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" BorderThickness="1">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="BorderBrush">
                                                <Setter.Value>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                        <GradientStop Color="White" Offset="0"/>
                                                        <GradientStop Color="#808080" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Border.Style>
                                    <Grid>
                                        <Rectangle Fill="Black" Height="2" VerticalAlignment="Bottom" Margin="3,0,3,4"/>
                                    </Grid>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    
                    <!-- Maximize/Restore Button -->
                    <Button x:Name="MaximizeButton" Width="16" Height="14" Margin="2,0" Click="MaximizeButton_Click"
                            Background="#C0C0C0" BorderThickness="1">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" BorderThickness="1">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="BorderBrush">
                                                <Setter.Value>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                        <GradientStop Color="White" Offset="0"/>
                                                        <GradientStop Color="#808080" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Border.Style>
                                    <Rectangle Stroke="Black" StrokeThickness="2" Margin="3,2,3,3"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    
                    <!-- Close Button -->
                    <Button Width="16" Height="14" Margin="2,0" Click="CloseButton_Click"
                            Background="#C0C0C0" BorderThickness="1">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" BorderThickness="1">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="BorderBrush">
                                                <Setter.Value>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                        <GradientStop Color="White" Offset="0"/>
                                                        <GradientStop Color="#808080" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Border.Style>
                                    <Grid>
                                        <Path Data="M 0,0 L 8,8 M 8,0 L 0,8" Stroke="Black" StrokeThickness="2" 
                                              Stretch="Fill" Margin="4"/>
                                    </Grid>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Menu Bar -->
        <Menu Grid.Row="1" Background="#C0C0C0" Padding="2" BorderBrush="#808080" BorderThickness="0,0,0,1">
            <MenuItem Header="_File">
                <MenuItem Header="_New File..." Click="OnNewFile" InputGestureText="Ctrl+N"/>
                <MenuItem Header="_Open File..." Click="OnOpenFile" InputGestureText="Ctrl+O"/>
                <MenuItem Header="_Save" Click="OnSaveCurrentFile" InputGestureText="Ctrl+S"/>
                <MenuItem Header="Save _As..." Click="OnSaveFileAs"/>
                <MenuItem Header="_Close" Click="OnCloseCurrentFile" InputGestureText="Ctrl+W"/>
                <Separator/>
                <MenuItem Header="New _Project..." Click="OnNewProject"/>
                <MenuItem Header="Open P_roject..." Click="OnOpenProject"/>
                <MenuItem Header="Save Pro_ject" Click="OnSaveProject"/>
                <Separator/>
                <MenuItem Header="Recent Projects"/>
                <Separator/>
                <MenuItem Header="E_xit" Click="OnExit"/>
            </MenuItem>
            <MenuItem Header="_Project">
                <MenuItem Header="Import _Verilog..." Click="OnImportVerilog"/>
                <MenuItem Header="Select _PDK..." Click="OnSelectPDK"/>
                <MenuItem Header="Set _Constraints..." Click="OnSetConstraints"/>
                <Separator/>
                <MenuItem Header="Project _Settings..." Click="OnProjectSettings"/>
            </MenuItem>
            <MenuItem Header="F_low">
                <MenuItem Header="Run _Synthesis" Click="OnRunSynthesis"/>
                <MenuItem Header="Run _Floorplan" Click="OnRunFloorplan"/>
                <MenuItem Header="Run _Placement" Click="OnRunPlacement"/>
                <MenuItem Header="Run _Routing" Click="OnRunRouting"/>
                <Separator/>
                <MenuItem Header="Run _Complete Flow" Click="OnRunCompleteFlow"/>
                <Separator/>
                <MenuItem Header="_Stop Current Stage" Click="OnStopFlow"/>
            </MenuItem>
            <MenuItem Header="_Tools">
                <MenuItem Header="_Toolchain Setup..." Click="OnToolchainSetup"/>
                <Separator/>
                <MenuItem Header="_Timing Analysis" Click="OnTimingAnalysis"/>
                <MenuItem Header="_Power Analysis" Click="OnPowerAnalysis"/>
                <MenuItem Header="_DRC Check" Click="OnDRCCheck"/>
                <MenuItem Header="_LVS Check" Click="OnLVSCheck"/>
                <Separator/>
                <MenuItem Header="View _GDS Layout" Click="OnViewGDS"/>
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem Header="_Console" Click="OnShowConsole" IsCheckable="True" IsChecked="True"/>
                <MenuItem Header="_Reports" Click="OnShowReports" IsCheckable="True" IsChecked="True"/>
                <MenuItem Header="_Project Explorer" Click="OnShowProjectExplorer" IsCheckable="True" IsChecked="True"/>
                <Separator/>
                <MenuItem Header="_Beginner Mode" Click="OnBeginnerMode"/>
                <MenuItem Header="_Expert Mode" Click="OnExpertMode"/>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_Documentation" Click="OnDocumentation"/>
                <MenuItem Header="_Tutorials (YouTube)" Click="OnTutorials"/>
                <Separator/>
                <MenuItem Header="_About Kairos EDA..." Click="OnAbout"/>
            </MenuItem>
        </Menu>

        <!-- Toolbar -->
        <ToolBarTray Grid.Row="2" Background="#C0C0C0">
            <ToolBar Background="#C0C0C0" Padding="4" BorderBrush="#808080" BorderThickness="0,0,0,1">
                <Button Content="New" ToolTip="New Project" Click="OnNewProject" Style="{StaticResource ModernButton}"/>
                <Button Content="Open" ToolTip="Open Project" Click="OnOpenProject" Style="{StaticResource ModernButton}"/>
                <Button Content="Save" ToolTip="Save Project" Click="OnSaveProject" Style="{StaticResource ModernButton}"/>
                <Separator/>
                <Button Content="Import" ToolTip="Import Verilog" Click="OnImportVerilog" Style="{StaticResource ModernButton}"/>
                <Button Content="PDK" ToolTip="Select PDK" Click="OnSelectPDK" Style="{StaticResource ModernButton}"/>
                <Separator/>
                <Button Content="▶ Run" ToolTip="Run Complete Flow" Click="OnRunCompleteFlow" Style="{StaticResource ModernButton}" Foreground="#006400"/>
                <Button Content="■ Stop" ToolTip="Stop Flow" Click="OnStopFlow" Style="{StaticResource ModernButton}" Foreground="#8B0000"/>
            </ToolBar>
        </ToolBarTray>

        <!-- Main Content Area with 3-panel layout -->
        <Grid Grid.Row="3" Margin="4" Background="#C0C0C0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250" MinWidth="150"/> <!-- Project Explorer -->
                <ColumnDefinition Width="Auto"/> <!-- Splitter -->
                <ColumnDefinition Width="*" MinWidth="400"/> <!-- Workflow Area -->
                <ColumnDefinition Width="Auto"/> <!-- Splitter -->
                <ColumnDefinition Width="350" MinWidth="250"/> <!-- Console/Reports -->
            </Grid.ColumnDefinitions>

            <!-- Left Panel: Project Explorer -->
            <GroupBox Grid.Column="0" Header="Project Explorer">
                <Border Style="{StaticResource SunkenPanel}" Margin="4">
                    <TreeView x:Name="projectTree" BorderThickness="0" Background="White">
                        <TreeViewItem Header="No Project Loaded" IsExpanded="True"/>
                    </TreeView>
                </Border>
            </GroupBox>

            <GridSplitter Grid.Column="1" Width="6" HorizontalAlignment="Stretch" ShowsPreview="True">
                <GridSplitter.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="White" Offset="0"/>
                        <GradientStop Color="#C0C0C0" Offset="0.5"/>
                        <GradientStop Color="#808080" Offset="1"/>
                    </LinearGradientBrush>
                </GridSplitter.Background>
            </GridSplitter>

            <!-- Center Panel: Workspace Editor -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/> <!-- Editor Workspace -->
                    <RowDefinition Height="Auto"/> <!-- Splitter -->
                    <RowDefinition Height="150" MinHeight="80"/> <!-- Build/Flow Output -->
                </Grid.RowDefinitions>

                <GroupBox Grid.Row="0" Header="Workspace">
                    <Border Style="{StaticResource SunkenPanel}" Margin="4">
                        <TabControl x:Name="editorTabs" Background="White" BorderThickness="0">
                            <TabItem Header="Welcome" x:Name="welcomeTab">
                                <ScrollViewer VerticalScrollBarVisibility="Auto" Background="White">
                                    <StackPanel Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <TextBlock Text="KAIROS EDA" FontSize="32" FontWeight="Bold" 
                                                 HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                        <TextBlock Text="Electronic Design Automation Suite" FontSize="14" 
                                                 HorizontalAlignment="Center" Margin="0,0,0,30" Foreground="#666"/>
                                        
                                        <TextBlock Text="Quick Start:" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                                        <TextBlock Text="• Create or Open a project from the File menu" Margin="0,0,0,5"/>
                                        <TextBlock Text="• Import Verilog files using Project → Import Verilog" Margin="0,0,0,5"/>
                                        <TextBlock Text="• Select a PDK with Project → Select PDK" Margin="0,0,0,5"/>
                                        <TextBlock Text="• Double-click files in Project Explorer to edit" Margin="0,0,0,20"/>
                                        
                                        <TextBlock Text="Workflow:" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                                        <TextBlock Text="• Use Flow menu or toolbar to run EDA stages" Margin="0,0,0,5"/>
                                        <TextBlock Text="• Monitor progress in the output panel below" Margin="0,0,0,5"/>
                                        <TextBlock Text="• View results in Console and Reports tabs" Margin="0,0,0,20"/>
                                        
                                        <TextBlock Text="Need Help?" FontSize="16" FontWeight="Bold" Margin="0,20,0,10"/>
                                        <TextBlock Text="Help → View Documentation" Margin="0,0,0,5"/>
                                    </StackPanel>
                                </ScrollViewer>
                            </TabItem>
                        </TabControl>
                    </Border>
                </GroupBox>

                <GridSplitter Grid.Row="1" Height="6" HorizontalAlignment="Stretch" ShowsPreview="True">
                    <GridSplitter.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="White" Offset="0"/>
                            <GradientStop Color="#C0C0C0" Offset="0.5"/>
                            <GradientStop Color="#808080" Offset="1"/>
                        </LinearGradientBrush>
                    </GridSplitter.Background>
                </GridSplitter>

                <GroupBox Grid.Row="2" Header="Build Output">
                    <Border Style="{StaticResource SunkenPanel}" Margin="4">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0" Background="#C0C0C0" BorderThickness="0,0,0,1" BorderBrush="#808080" Padding="4">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Status: " FontWeight="Bold"/>
                                    <TextBlock x:Name="buildStatus" Text="Ready"/>
                                    <TextBlock Text="  |  Progress: " FontWeight="Bold" Margin="20,0,0,0"/>
                                    <ProgressBar x:Name="progressBar" Width="200" Height="16" Minimum="0" Maximum="100" Value="0"
                                                BorderThickness="1" BorderBrush="#808080" Background="White" Foreground="#000080" Margin="5,0"/>
                                    <TextBlock x:Name="progressPercent" Text="0%" Margin="5,0"/>
                                </StackPanel>
                            </Border>
                            <TextBox Grid.Row="1" x:Name="buildOutput" IsReadOnly="True" BorderThickness="0"
                                   VerticalScrollBarVisibility="Auto" TextWrapping="Wrap" 
                                   FontFamily="Consolas" FontSize="10" Background="White"
                                   Text="Ready. Use Flow menu or toolbar to run EDA stages."/>
                        </Grid>
                    </Border>
                </GroupBox>
            </Grid>

            <GridSplitter Grid.Column="3" Width="6" HorizontalAlignment="Stretch" ShowsPreview="True">
                <GridSplitter.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="White" Offset="0"/>
                        <GradientStop Color="#C0C0C0" Offset="0.5"/>
                        <GradientStop Color="#808080" Offset="1"/>
                    </LinearGradientBrush>
                </GridSplitter.Background>
            </GridSplitter>

            <!-- Right Panel: Console and Reports Tabs -->
            <GroupBox Grid.Column="4" Header="Output">
                <TabControl Margin="4" Background="#C0C0C0" BorderBrush="#808080" BorderThickness="2">
                    <TabItem Header="Console">
                        <Border Style="{StaticResource SunkenPanel}">
                            <TextBox x:Name="consoleOutput" IsReadOnly="True" BorderThickness="0"
                                     VerticalScrollBarVisibility="Auto" TextWrapping="Wrap"
                                     FontFamily="Consolas" FontSize="10" Background="Black" Foreground="#00FF00"
                                     Text="Kairos EDA Console&#x0a;Ready."/>
                        </Border>
                    </TabItem>
                    <TabItem Header="Reports">
                        <Border Style="{StaticResource SunkenPanel}">
                            <TextBox x:Name="reportsOutput" IsReadOnly="True" BorderThickness="0"
                                     VerticalScrollBarVisibility="Auto" TextWrapping="Wrap"
                                     FontFamily="Consolas" FontSize="10" Background="White"
                                     Text="No reports available. Run a workflow stage to generate reports."/>
                        </Border>
                    </TabItem>
                </TabControl>
            </GroupBox>
        </Grid>

        <!-- Status Bar -->
        <StatusBar Grid.Row="4" Background="#C0C0C0" BorderThickness="0,2,0,0">
            <StatusBar.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="White" Offset="0"/>
                    <GradientStop Color="#808080" Offset="1"/>
                </LinearGradientBrush>
            </StatusBar.BorderBrush>
            <StatusBarItem>
                <Border BorderThickness="1" BorderBrush="#808080" Padding="6,2" Background="White" Margin="2">
                    <TextBlock x:Name="statusLabel" Text="Ready"/>
                </Border>
            </StatusBarItem>
            <Separator Background="#808080" Margin="2"/>
            <StatusBarItem>
                <Border BorderThickness="1" BorderBrush="#808080" Padding="6,2" Background="White" Margin="2">
                    <TextBlock x:Name="projectStatus" Text="No Project Loaded"/>
                </Border>
            </StatusBarItem>
            <Separator Background="#808080" Margin="2"/>
            <StatusBarItem>
                <Border BorderThickness="1" BorderBrush="#808080" Padding="6,2" Background="White" Margin="2">
                    <TextBlock x:Name="backendStatus" Text="Backend: Idle"/>
                </Border>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
